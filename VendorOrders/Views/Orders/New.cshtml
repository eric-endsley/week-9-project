@{
    Layout = "_Layout";
}

<h1>Enter a new order for @Model.Name</h1>

<form action='/vendors/@Model.Id/orders' method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
    <div class='form-group'>
        <label for="orderTitle">Order Title</label>
        <input class="form-control" id="orderTitle" name="orderTitle" type="text">
    </div>
    <div class='form-group'>
        <label for="orderDate">Order Date</label>
        <input class="form-control" id="orderDate" name="orderDate" type="text">                
    </div>
    <div class='form-group'>
        <label for="orderPrice">Order Price</label>
        <input class="form-control" id="orderPrice" name="orderPrice" type="number">         
    </div>
    <div class='form-group'>
        <label for="orderDescription">Order Description</label>
        <textarea class="form-control" id="orderDescription" name="orderDescription" rows="3"></textarea>
    </div>
    <button type="submit">Submit Order</button>
</form>